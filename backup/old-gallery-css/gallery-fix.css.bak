/* Gallery View Fix
   This file addresses sizing and positioning issues with the image gallery grid view
*/

/* Gallery container styles */
body.viewer-page .image-gallery {
  padding: 16px 0;
  overflow-y: auto;
  width: 100%;
  height: auto;
  min-height: 200px;
}

