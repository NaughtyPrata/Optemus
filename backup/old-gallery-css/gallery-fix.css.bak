/* Image card styles in grid view */
body.viewer-page .grid-view .image-card {
  width: 100%;
  height: auto;
  aspect-ratio: 1 / 1;
  overflow: hidden;
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-light), var(--shadow-dark);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  cursor: pointer;
}

body.viewer-page .grid-view .image-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-dark), var(--shadow-light);
}

/* Image display inside card */
body.viewer-page .grid-view .image-card img.card-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

body.viewer-page .grid-view .image-card:hover img.card-image {
  transform: scale(1.05);
}

/* Empty state positioning */
body.viewer-page .image-gallery .empty-state {
  width: 100%;
  grid-column: 1 / -1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
  text-align: center;
  min-height: 400px;
  margin: 20px 0;
}

body.viewer-page .image-gallery .empty-state i {
  font-size: 5rem;
  margin-bottom: 1.5rem;
  opacity: 0.5;
  color: var(--text-muted);
}

body.viewer-page .image-gallery .empty-state p {
  margin-bottom: 1.5rem;
  font-size: 1.1rem;
  color: var(--text-muted);
}

body.viewer-page .image-gallery .empty-state .btn {
  margin-top: 10px;
}

/* Viewer content container */
body.viewer-page .viewer-content {
  padding: 1.5rem;
  height: calc(100vh - 70px);
  overflow-y: auto;
  display: flex;
  flex-direction: column;
}

/* Toolbar positioning */
body.viewer-page .toolbar {
  width: 100%;
  margin-bottom: 1.5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-shrink: 0;
}

/* View options in toolbar */
body.viewer-page .view-options {
  display: flex;
  gap: 10px;
}

body.viewer-page .view-btn,
body.viewer-page .refresh-btn {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--element-bg);
  border-radius: var(--border-radius);
  border: none;
  color: var(--text-muted);
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: var(--shadow-light), var(--shadow-dark);
}

body.viewer-page .view-btn:hover,
body.viewer-page .refresh-btn:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-dark), var(--shadow-light);
}

body.viewer-page .view-btn.active {
  color: var(--primary-color);
  box-shadow: var(--shadow-inset-light), var(--shadow-inset-dark);
}

/* Search container */
body.viewer-page .search-container {
  position: relative;
  width: 100%;
  max-width: 400px;
}

body.viewer-page .search-input {
  width: 100%;
  padding: 12px 16px 12px 40px;
  background-color: var(--element-bg);
  border: none;
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-inset-light), var(--shadow-inset-dark);
  color: var(--text-color);
  font-family: var(--font-primary);
  font-size: 0.95rem;
  transition: all 0.2s ease;
}

body.viewer-page .search-input:focus {
  outline: none;
  box-shadow: 0 0 0 2px rgba(102, 126, 234, 0.5), var(--shadow-inset-light), var(--shadow-inset-dark);
}

body.viewer-page .search-icon {
  position: absolute;
  left: 14px;
  top: 50%;
  transform: translateY(-50%);
  color: var(--text-muted);
  font-size: 1.1rem;
}

/* Placeholder fix for failed images */
body.viewer-page .card-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--element-bg);
  color: var(--text-muted);
  font-size: 2rem;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  body.viewer-page .image-gallery.grid-view {
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 10px;
  }
  
  body.viewer-page .viewer-content {
    padding: 1rem;
    height: calc(100vh - 60px);
  }
  
  body.viewer-page .toolbar {
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 1rem;
  }
  
  body.viewer-page .search-container {
    width: 100%;
    max-width: none;
  }
}

/* Modal image preview improvements */
body.viewer-page .image-preview {
  background-color: var(--bg-color);
  padding: 1rem;
}

body.viewer-page .image-preview img {
  max-width: 100%;
  max-height: 60vh;
  object-fit: contain;
  display: block;
  margin: 0 auto;
}

/* Modal image error message */
body.viewer-page .modal-image-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 300px;
  background-color: var(--element-bg);
  color: var(--text-muted);
  font-size: 2rem;
  text-align: center;
  gap: 1rem;
}

body.viewer-page .modal-image-error p {
  font-size: 1rem;
}